<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/OpalActionBar</item>
        <item name="android:actionBarDivider">@null</item>
    </style>

    <style name="StageBaseTheme" parent="android:Theme.Holo.Light"></style>

    <style name="StageTheme" parent="StageBaseTheme">
        <item name="android:actionBarDivider">@null</item>
    </style>

    <style name="DesignerBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="DesignerTheme" parent="DesignerBaseTheme">
        <item name="android:windowBackground">@color/designer_window_background</item>
        <item name="android:actionBarStyle">@style/DesignerActionBar</item>
        <item name="android:actionBarDivider">@null</item>
    </style>

    <style name="PopupTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="DesignerActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/designer_window_background</item>
    </style>

    <style name="OpalActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/card_background</item>
        <item name="android:logo">@drawable/actionbar_logo_4</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <!-- Others -->

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem"></style>

    <style name="DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner"></style>

    <style name="drawer_item_style">
        <item name="android:fontFamily" tools:targetApi="16">sans_serif_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="drawer_item_style_selected">
        <item name="android:fontFamily" tools:targetApi="16">sans_serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="column">
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="group">
        <item name="android:padding">8dip</item>
    </style>

    <style name="card">
        <item name="android:background">@color/card_background</item>
        <item name="android:padding">16dip</item>
    </style>

    <style name="cardish">
        <item name="android:background">@color/card_background</item>
        <item name="android:padding">16dip</item>
    </style>

    <style name="card_transparent">
        <item name="android:padding">16dip</item>
    </style>

    <style name="header_button" parent="android:Widget.Holo.TextView">
        <item name="android:background">#ff0cb7b9</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rule_header_button" parent="header_button">
        <item name="android:background">#cdffbb33</item>
    </style>

    <style name="loop_header_button" parent="header_button">
        <item name="android:background">#cdffbb33</item>
    </style>

    <style name="scene_header_button" parent="header_button">
        <item name="android:background">#cdffbb33</item>
    </style>

</resources>